<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.2.0
          https://maven.apache.org/xsd/settings-1.2.0.xsd">

    <!--
      IMPORTANT
      If <localRepository> is relative (e.g. "repository"), Maven resolves it relative
      to the current working directory. If you run Maven from "/", you end up with
      "/repository".

      Using ${maven.multiModuleProjectDirectory} keeps the repo pinned to the project
      root regardless of where Maven is invoked from.
    -->
    <localRepository>${maven.multiModuleProjectDirectory}/repository</localRepository>

    <mirrors>
        <mirror>
            <id>central</id>
            <name>Maven Central</name>
            <url>https://repo1.maven.org/maven2</url>
            <mirrorOf>central</mirrorOf>
        </mirror>
    </mirrors>

    <!-- Profile for offline mode (optional) -->
    <profiles>
        <profile>
            <id>offline</id>
            <repositories>
                <repository>
                    <id>central</id>
                    <url>https://repo1.maven.org/maven2</url>
                    <releases>
                        <enabled>true</enabled>
                    </releases>
                    <snapshots>
                        <enabled>false</enabled>
                    </snapshots>
                </repository>
            </repositories>
        </profile>
    </profiles>

    <activeProfiles>
        <activeProfile>offline</activeProfile>
    </activeProfiles>
</settings>
